@model BuildmateWebsite.Controllers.BlogController.BlogViewData
@using BuildmateWebsite.Models

@{
    ViewBag.Title = @Html.DisplayFor(model => Model.Blog.Title) + " - Buildmate";
    ViewBag.Description = @Model.Blog.Keywords;
    Layout = "~/Views/Shared/Blog.cshtml";
}

    <div id="fb-root"></div>

    <script>
    (function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
        fjs.parentNode.insertBefore(js, fjs);
    } (document, 'script', 'facebook-jssdk'));
    </script>

        <article class="blog">
            <section class="post-header">
                <h2>@Html.DisplayFor(model => Model.Blog.Title)</h2>

                <p class="comments"><a href="#fb-comments"><fb:comments-count href=@Request.Url.AbsoluteUri>0</fb:comments-count> Comments </a></p>
            
                <div class="post-author">
                    <img src="/content/images/avatars/steve.jpg" />
                    Steve Jenkins
                    <small>Posted on <time>@Model.Blog.DateCreated.ToString("dddd, dd MMMM, yyyy")</time></small>
                </div>
            </section>
        
            <section class="post-content">
                <p>@Html.Raw(Model.Blog.Article)</p>
            </section>
        </article>

        <h3>Comments</h3>

        <div id="fb-comments" class="fb-comments" data-href="@Request.Url.AbsoluteUri" data-num-posts="2" data-width="640"></div>
