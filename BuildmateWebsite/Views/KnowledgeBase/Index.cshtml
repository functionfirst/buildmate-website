@model BuildmateWebsite.Controllers.KnowledgeBaseController.ArticleViewData
@using BuildmateWebsite.Models

@{
    ViewBag.Title = "Knowledge Base - Estimating Software for builders, developers and home enthusiasts";
    ViewBag.Keywords = "estimating, software, knowledge, base, recent, articles, tasks, project, resources, categories, catalogue, documents, projects, subscription, billing, suppliers, buildmate";
    Layout = "~/Views/Shared/KnowledgeBase.cshtml";
}
<h2>Recent Articles</h2>

<ul>
@foreach (var item in Model.RecentArticles)
{
    <li>
        @Html.ActionLink(item.Title, "Article", "KnowledgeBase", new { id = item.KnowledgeArticleId, Title = item.Title.ToSeoUrl() }, null)
    </li>
}
</ul>