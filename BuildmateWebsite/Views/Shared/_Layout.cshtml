<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title dir="ltr">@ViewBag.Title</title>
    <meta name="description" content="@ViewBag.Description" />
    <meta name="viewport" content="width=device-width" />
    
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700&amp;subset=latin,latin-ext" rel="stylesheet">
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
    <script type="text/javascript">        window.jQuery || document.write('<script src="js/libs/jquery-1.7.1.min.js"><\/script>')</script>
    <script type="text/javascript" src="/content/js/functions.js"></script>

    <meta property="og:title" content="@ViewBag.Title" />
    <meta property="og:image" content="@(Request.Url.Scheme)://@(Request.Url.Host)/Content/images/logo.png" />
    <meta property="og:url" content="@Request.Url.OriginalString" />
    <meta property="og:site_name" content="Buildmate" />
    <meta property="og:description" content="Buildmate is the first online estimating software designed to help you easily create and manage your building estimates." />
    
    <meta name="twitter:title" content="@ViewBag.Title" />
    <meta name="twitter:image" content="@(Request.Url.Scheme)://@(Request.Url.Host)/Content/images/logo.png" />
    <meta name="twitter:url" content="@Request.Url.OriginalString" />
    <meta name="twitter:card" content="Buildmate is the first online estimating software designed to help you easily create and manage your building estimates." />
</head>

<body class="@RenderSection("BodyClass", false)">
    <div class="wrapper">
        <div class="header">
            <div class="container">
                <h2 class="logo">
                    <a href="/">Buildmate <span>estimating made simple</span></a>
                </h2>

                <ul class="nav">
                    <li><a href="/whats_new/">What's New</a></li>
                    <li><a href="/plans_and_pricing/">Plans &amp; Pricing</a></li>
                    <li><a href="/knowledgebase/">Knowledge Base</a></li>
                    <li><a href="/blog/">Blog</a></li>
                    <li><a href="https://buildmateapp.com" class="btn">Login</a></li>
                    <li><a href="https://buildmateapp.com/register/" class="btn primary">Try it Free</a></li>
                </ul>
            </div>
        </div>
    
     @RenderBody()
    </div>

    <div class="footer">
        <div class="container">
            <div class="col4">
                <h3 class="footer-header">Learn More</h3>
                
                <ul>
                    <li><a href="/whats_new/">What's New</a></li>                
                    <li><a href="/plans_and_pricing/">Plans &amp; Pricing</a></li>
                    
                    <li><a href="/knowledgebase/">Knowledge Base</a></li>
                </ul>
            </div>
            <div class="col4">
                <h3 class="footer-header">Features</h3>

                <ul>
                    <li>
                        <a href="/features/extensive_tasks" @ViewBag.extensive_tasks>Extensive Tasks</a>
                    </li>
                    <li>
                        <a href="/features/project_templates/" @ViewBag.project_templates>Project Templates</a>
                    </li>
                    <li>
                        <a href="/features/cost_analysis/" @ViewBag.cost_analysis>Cost Analysis</a>
                    </li>
                    <li>
                        <a href="/features/pre_priced_resources/" @ViewBag.pre_priced_resources>Pre-priced Resources</a>
                    </li>
                    <li>
                        <a href="/features/customer_management/" @ViewBag.customer_management>Customer Management</a>
                    </li>
                    <li>
                        <a href="/features/professional_documents/" @ViewBag.professional_documents>Professional Documents</a>
                    </li>
                </ul>
            </div>
            <div class="col4">
                <h3 class="footer-header">About</h3>

                <ul>
                    <li><a href="/company/">Company</a></li>
                    <li><a href="/blog/">Blog</a></li>
                    <li><a href="/contact/">Contact</a></li>
                </ul>

            </div>
            <div class="col4">
                <a href="https://buildmateapp.com/register/" class="btn btn-large primary">Try it Free</a>
                
                <div class="social">
                    <a class="social-fb" target="_blank" href="http://www.facebook.com/getbuildmate/">Facebook</a>
                    <a class="social-tw" target="_blank" href="http://twitter.com/getbuildmate">Twitter</a>
                    <a class="social-pl" target="_blank" href="https://plus.google.com/+Getbuildmate" rel="publisher">Google+</a>
                    <a class="social-in" target="_blank" href="http://linkedin.com">LinkedIn</a>
                </div>
            </div>


            <div class="footer-narrow">
                <p>
                    <a href="/terms/">Terms of service</a> &bull;
                    <a href="/privacy/">Privacy policy</a>
                </p>
                <p>
                    &copy; Buildmate Software Ltd.
                </p>
            </div>
        </div>
    </div>

    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>

