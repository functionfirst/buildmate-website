<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title dir="ltr">@ViewBag.Title</title>
    
    <meta name="author" content="Alan Jenkins (alan@functionfirst.co.uk)" />

	<meta name="description" content="Buildmate is the first internet based building, construction, specialist trade and services estimating application." />
	<meta name="keywords" content="@ViewBag.Keywords" />
    <meta name="viewport" content="width=device-width" />

    
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700&amp;subset=latin,latin-ext" rel="stylesheet">
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
    <script type="text/javascript">window.jQuery || document.write('<script src="js/libs/jquery-1.7.1.min.js"><\/script>')</script>
</head>

<body>
    <div class="header">
        <div class="container">
            <h2 class="logo">
                <a href="/">Buildmate <span>estimating made simple</span></a>
            </h2>

            <ul class="nav">
                <li><a href="/features/">Features</a></li>
                <li><a href="/plans_and_pricing/">Pricing</a></li>
                <li><a href="/knowledgebase/">Help/Support</a></li>
                <li><a href="/blog/">Blog</a></li>
                <li><a href="https://buildmateapp.com">Login</a></li>
                <li>
                    <a href="https://buildmateapp.com/register/" class="btn primary">Try it Free</a>
                </li>
            </ul>
        </div>
    </div>
    
    <div class="headline">
        <h1>Manage your building and construction estimates <strong>simply</strong> and <strong>easily</strong>.
             @*Buildmate makes it simple and easy to manage your estimates and quotations.*@

        </h1>

        <p>
            @*As an online estimating application, Buildmate is
            designed to help construction companies, tradesmen and
            property developers.*@
            Buildmate is the first internet based building, construction, specialist trade and services estimating application.
        </p>

        <a href="/features/" class="btn btn-large secondary">View the Features</a>
        <a href="https://buildmateapp.com/register/" class="btn btn-large primary">Try it Free</a>
    </div>

    <div class="container main">
        @RenderBody()
    </div>
    
    <div class="footer">
        <div class="container ">
            <p>
                <a href="http://www.functionfirst.co.uk" title="developed by functionfirst" class="dev">developed by <strong>function</strong>first</a>
        
                &copy; @DateTime.Now.Year Buildmate &bull;
                <a href="/contact/">Contact</a> &bull;
                <a href="/privacy/">Privacy</a> &bull;
                <a href="/terms/">Terms</a> &bull;
               
                <a href="https://plus.google.com/105040373995783273094" rel="publisher">Google+</a>
            </p>
        </div>
    </div>

    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <!-- Google -->
