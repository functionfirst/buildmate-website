@model IEnumerable<BuildmateWebsite.Models.KnowledgeCategory>
@using BuildmateWebsite.Models

<ul>
    <li>@Html.ActionLink("Recent Articles", "Index", null, new { @class = ViewBag.noCategoryClass })</li>
@foreach (var item in Model)
{
    <li>
        @Html.ActionLink(item.Name, "category", new { id = item.KnowledgeCategoryId, Title = item.Name.ToSeoUrl() }, new { @class = (item.KnowledgeCategoryId == ViewBag.currentCategoryID ? "active" : String.Empty) })
    </li>
}
</ul>