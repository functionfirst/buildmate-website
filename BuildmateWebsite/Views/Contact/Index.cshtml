@model BuildmateWebsite.Models.ContactForm

@{
    ViewBag.Title = "Buildmate is an Online Estimating Software company - Buildmate";
    ViewBag.Description = "Learn more about the company or get in touch with Buildmate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section BodyClass {@("contact")}

<div class="hero-container">
    <div class="container">
        <h1 class="hero-title">Get In Touch</h1>

        <p class="hero-message">If have any comments, questions or ideas to improve Buildmate we'd love to hear from you!</p>
    </div>
</div>

<div class="content">
    <div class="container container-large">
        <div class="row">
            <div class="span8">
                <h2>Send us a direct message</h2>

                <h3>Alternatively you may find what you're looking for by visiting our <a href="/knowledgebase/">Knowledge Base</a>.</h3>

                @if (ViewBag.success)
                {
                    <div class="flash">
                        <h3>Thank you for your feedback</h3>

                        <p>Your message has been sent successfully.</p>
                    </div>
                }

                @if (ViewBag.error)
                {
                    <div class="flash flash-error">
                        <h3>Error trying to Send Message</h3>

                        <p>We were unable to send your message at this time.</p>
                    </div>
                }
                
                @using (Html.BeginForm("index", "contact", FormMethod.Post, new { id = "contact-form", @class = "form" }))
                {

                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, "Name *", new { @class = "form-label" })

                        <div class="form-controls">
                            @Html.TextBoxFor(model => model.Name)
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, "Email *", new { @class = "form-label" })

                        <div class="form-controls">
                            @Html.TextBoxFor(model => model.Email)
                            @Html.ValidationMessageFor(model => model.Email)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Message, "Message *", new { @class = "form-label" })

                        <div class="form-controls">
                            @Html.TextAreaFor(model => model.Message, new { @cols = 60, @rows = 10 })
                            @Html.ValidationMessageFor(model => model.Message)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-controls">
                            <input class="btn primary btn-large btn-block" data-type="submit" type="submit" value="Send Message" />
                        </div>
                    </div>
                }
            </div>

            <div class="span4">
                <h3>Our Address</h3>

                <address>
                    <strong>Buildmate Software Ltd</strong><br />
                    Exchange Building,<br />
                    66 Church Street,<br />
                    Hartlepool,<br />
                    TS24 7DN
                </address>


                <h3>Company Registration N<sup>o</sup></h3>
                <blockquote>
                    06536041
                </blockquote>

                <iframe width="100%" height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="http://maps.google.co.uk/maps?q=TS24+7DN&amp;ie=UTF8&amp;hq=&amp;hnear=Hartlepool+TS24+7DN,+United+Kingdom&amp;gl=uk&amp;t=m&amp;ll=54.686931,-1.205063&amp;spn=0.017365,0.036478&amp;z=14&amp;iwloc=A&amp;output=embed"></iframe>
            </div>
        </div>
    </div>
</div>
