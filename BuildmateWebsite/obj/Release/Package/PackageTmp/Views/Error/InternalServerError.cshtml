@{
    ViewBag.Title = "An unexpected error occurred - Estimating Software for builders, developers and home enthusiasts";
    ViewBag.Keywords = "unexpected, error, estimating, software, buildmate";

    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="intro">
    <h1>Something went wrong</h1>

    <p>It looks like an unexpected error occurred</p>
</div>

<div class="container">
    <div style="margin: 20px 0;  line-height: 72px; font-size: 72px;">:(</div>

    @ViewBag.exception
    <p class="intro">The error has been logged and an Administrator has been notified that there was a problem.</p>

    <p>If you continue to receive this error, please <a href="mailto:support@buildmateapp.com">get in touch</a> and we'll help if we can.</p>
</div>