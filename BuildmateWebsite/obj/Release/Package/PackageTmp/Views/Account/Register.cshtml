@model BuildmateWebsite.Models.AccountModel.RegisterModel
@{
    ViewBag.Title = "Start your free 30 day trial - Estimating Software for builders, developers and home enthusiasts";
    ViewBag.Keywords = "register, estimating, software, sign-up, free, trial, registration, construction, estimating, software, builders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="intro">
    <div class="container">
        <h1>Register for your free 30 day trial</h1>

        <p>No payment or credit card details required.</p>
    </div>
</div>

@*<p>
    Passwords are required to be a minimum of @Membership.MinRequiredPasswordLength characters in length.
</p>*@

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    
    @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")

    <section class="signup_form">
       <div class="clearfix">
            @Html.LabelFor(m => m.UserName, "Email")

            <div class="input">
                @Html.TextBoxFor(m => m.UserName, new { size = 34 })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
        </div>

        <div class="clearfix">
            @Html.LabelFor(m => m.Password)
                
            <div class="input">
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>

        <div class="clearfix">
            <div class="input">
                <input type="submit" value="Confirm Registration" class="btn primary btn-large" />
            </div>
        </div>

        <div class="clearfix">
            <div class="input">
                <small>
                    By clicking Confirm Registration you agree to the
                    <a href="/terms/" target="_blank">Terms of Use</a>
                    and <a href="/privacy/" target="_blank">Privacy Policy</a>.
                </small>
            </div>
        </div>
    </section>
}
    
<div class="container">
    <div class="feature-list feature-list-two-col pricing-features clearfix">
        <h2>Frequently Asked Questions</h2>

        <h3>Get help. Find Answers.</h3>

        <div class="feature-item feature-icon feature-clock">
            <p>
                <strong>How does the free 30 day trial work?</strong>
                For 30 days you'll be able to use all of the great features of Buildmate without any limits.
            </p>
        </div>

        <div class="feature-item feature-icon feature-present">
            <p>
                <strong>What is the refund policy?</strong>
                You can cancel your subscription at any time, your system will automatically downgrade to the unpaid version. You'll still be able to access your Customer data.
            </p>
        </div>
    </div>
    </div>