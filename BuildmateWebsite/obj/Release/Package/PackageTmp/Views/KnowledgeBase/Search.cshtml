@model BuildmateWebsite.Controllers.KnowledgeBaseController.ArticleViewData
@using BuildmateWebsite.Models

@{
    ViewBag.Title = "Search Results - Knowledge Base - Estimating Software for builders, developers and home enthusiasts";
    ViewBag.Keywords = "estimating, software, search, knowledge, base, tasks, project, resources, results, buildmate";
    Layout = "~/Views/Shared/KnowledgeBase.cshtml";
}

<p class="breadcrumb"><a href="/">Home</a> &raquo; Knowledge Base</p>


<section class="main-panel">
    <div class="search">
        <h3>Search the Knowledge Base</h3>
    
        <form action="/knowledgebase/search/" method="post">
            <input type="text" name="searchTerm" size="50" value="@ViewBag.searchTerm" />
            <input type="submit" value="Search" />
            <p>
                <small>Search by keywords such as Tasks, Project, Resource, etc.</small>
            </p>
        </form>
    </div>

    <h2>Search Results</h2>

    <p>
        <small>@Model.SearchArticles.Count results found for '@ViewBag.searchTerm'.</small>
    </p>

    <ul>
    @foreach (var item in Model.SearchArticles)
    {
        <li>
            @Html.ActionLink(item.Title, "article", "KnowledgeBase", new { id = item.KnowledgeArticleId, Title = item.Title.ToSeoUrl() }, null)
        </li>
    }
    </ul>

</section>