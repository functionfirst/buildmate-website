@model BuildmateWebsite.Controllers.KnowledgeBaseController.ArticleViewData
@using BuildmateWebsite.Models

@{
    ViewBag.Title = @Model.CurrentCategory.Name + " - Knowledge Base - Estimating Software for builders, developers and home enthusiasts";
    ViewBag.Keywords = @Model.CurrentCategory.Keywords;
    Layout = "~/Views/Shared/KnowledgeBase.cshtml";
}
<p class="breadcrumb">
    <a href="/">Home</a> <span class="divider">/</span>
    <a href="/knowledgebase">Knowledge Base</a> <span class="divider">/</span>
    @Model.CurrentCategory.Name
</p>

<section class="main-panel">
    <h2>@Model.CurrentCategory.Name</h2>

    <ol>
    @foreach (var item in Model.ArticlesInCategory)
    {
        <li>
            @Html.ActionLink(item.Title, "article", "KnowledgeBase", new { id = item.KnowledgeArticleId, Title = item.Title.ToSeoUrl() }, null)
        </li>
    }
    </ol>
</section>