@model BuildmateWebsite.Controllers.KnowledgeBaseController.ArticleViewData

@{
    ViewBag.Title = Model.KnowledgeArticle.Title + " - Knowledge Base - Estimating Software for builders, developers and home enthusiasts";
    ViewBag.Keywords = Model.KnowledgeArticle.Keywords;
    Layout = "~/Views/Shared/KnowledgeBase.cshtml";
}

<div id="fb-root"></div>

<script>
    (function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
        fjs.parentNode.insertBefore(js, fjs);
    } (document, 'script', 'facebook-jssdk'));
</script>

<p class="breadcrumb">
    <a href="/">Home</a> <span class="divider">/</span>
    <a href="/knowledgebase">Knowledge Base</a> <span class="divider">/</span>
    @Html.DisplayFor(model => model.KnowledgeArticle.Title)
</p>

<section class="main-panel">
    <article>
        <section class="post-header">
            <h2>@Html.DisplayFor(model => model.KnowledgeArticle.Title)</h2>

            <p class="comments"><a href="#fb-comments"><fb:comments-count href=@Request.Url.AbsoluteUri>0</fb:comments-count> Comments </a></p>

            <p class="breadcrumb">Last Modified on @Html.DisplayFor(model => model.KnowledgeArticle.DateModified)</p>
        </section>

        <section class="post-content">
            @Html.Raw(Model.KnowledgeArticle.Article)
        </section>
    </article>

    <h3>Comments</h3>
    
    <div id="fb-comments" class="fb-comments" data-href="@Request.Url.AbsoluteUri" data-num-posts="2" data-width="640"></div>
</section>